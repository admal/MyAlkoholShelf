@using MyAlcoholShelf.Web.Models
@model System.Collections.Generic.List<MyAlcoholShelf.Web.Models.AlkoholRecipeViewModel>

@{
    ViewBag.Title = "Your recipies";
    Layout = "_Layout";

}

<h2>Your recipies</h2>

<a asp-action="GetAddEditView" 
   asp-controller="Recipies">
    New recipe
</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th># Versions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
            {
            <text>
            <tr>
                <td>
                    @recipe.Name
                </td>
                <td>
                    @recipe.Versions.Count
                </td>
            </tr>
            <tr> 
                <td colspan="2">
                    <h4>Recipe versions</h4>
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>Created at</th>
                            <th>Alkohols count</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var version in recipe.Versions)
                        {
                            <text>
                                <tr>
                                    <td>
                                        @version.CreatedTime.ToString()
                                    </td>
                                    <td>
                                        @version.AlkoholCount
                                    </td>
                                    <td>
                                        <a asp-action="GetAddEditView"
                                           asp-controller="Recipies"
                                           asp-route-recipeId="@version.Id">
                                            Edit
                                        </a>

                                    </td>
                                </tr>
                            </text>
                        }
                        </tbody>
                    </table>
                </td>
            </tr>
            </text>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        function showModal(id) {
            $('#' + id).modal();
        }
    </script>
}
